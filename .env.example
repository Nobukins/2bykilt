# ============================================================================
# 2bykilt Environment Configuration
# Copy this file to .env and configure according to your environment
# ============================================================================

# ============================================================================
# LLM (Large Language Model) API Configuration
# Configure one or more LLM providers for AI functionality
# ============================================================================

OPENAI_ENDPOINT=https://api.openai.com/v1
OPENAI_API_KEY=

ANTHROPIC_API_KEY=
ANTHROPIC_ENDPOINT=https://api.anthropic.com

GOOGLE_API_KEY=

AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2025-01-01-preview

DEEPSEEK_ENDPOINT=https://api.deepseek.com
DEEPSEEK_API_KEY=

MISTRAL_API_KEY=
MISTRAL_ENDPOINT=https://api.mistral.ai/v1

OLLAMA_ENDPOINT=http://127.0.0.1:1234/v1

ALIBABA_ENDPOINT=https://dashscope.aliyuncs.com/compatible-mode/v1
ALIBABA_API_KEY=

MOONSHOT_ENDPOINT=https://api.moonshot.cn/v1
MOONSHOT_API_KEY=

# ============================================================================
# Application Settings
# ============================================================================

# Set to false to disable anonymized telemetry
ANONYMIZED_TELEMETRY=true

# LogLevel: Set to debug to enable verbose logging, set to result to get results only. Available: result | debug | info
BROWSER_USE_LOGGING_LEVEL=info

# LLM機能の制御 (セキュリティ調査対象から除外するためのオプション)
# Set to true to enable LLM functionality, false for minimal browser automation only
ENABLE_LLM=false

# ============================================================================
# Browser Configuration
# ============================================================================

# Default browser configuration
DEFAULT_BROWSER=edge

# Chrome settings
CHROME_PATH=
CHROME_USER_DATA=
CHROME_DEBUGGING_PORT=9222
CHROME_DEBUGGING_HOST=localhost
# Set to true to keep browser open between AI tasks
CHROME_PERSISTENT_SESSION=false

# Microsoft Edge Configuration
EDGE_PATH=
EDGE_USER_DATA=
EDGE_DEBUGGING_PORT=9223

# ============================================================================
# Recording and File Path Settings
# ============================================================================

RECORDING_PATH=
# Windows: C:\Users\%USERNAME%\Documents\2bykilt\recordings
# macOS/Linux: ./tmp/record_videos

# ============================================================================
# Recordings Feature Configuration (Issue #302)
# Control how recordings are scanned and displayed in the UI
# Requires corresponding Feature Flags to be enabled in config/feature_flags.yaml
# ============================================================================

# Enable recursive scanning of RECORDING_PATH subdirectories
# Feature Flag: artifacts.recursive_recordings_enabled
# Default: false (scan only RECORDING_PATH root directory)
# When true: scans all subdirectories for .webm/.mp4/.gif files
# ARTIFACTS_RECURSIVE_RECORDINGS_ENABLED=true

# Enable GIF fallback preview when ENABLE_LLM=false
# Feature Flag: artifacts.recordings_gif_fallback_enabled
# Default: false (show file paths only when LLM disabled)
# When true: automatically generates GIF previews from recordings
# Requires: ffmpeg installed on system
# ARTIFACTS_RECORDINGS_GIF_FALLBACK_ENABLED=true

# Example configurations:
# ------------------------
# Development with full features:
#   ENABLE_LLM=false
#   ARTIFACTS_RECURSIVE_RECORDINGS_ENABLED=true
#   ARTIFACTS_RECORDINGS_GIF_FALLBACK_ENABLED=true
#
# Production with LLM enabled:
#   ENABLE_LLM=true
#   ARTIFACTS_RECURSIVE_RECORDINGS_ENABLED=false
#   ARTIFACTS_RECORDINGS_GIF_FALLBACK_ENABLED=false
#
# Minimal browser automation only:
#   ENABLE_LLM=false
#   ARTIFACTS_RECURSIVE_RECORDINGS_ENABLED=false
#   ARTIFACTS_RECORDINGS_GIF_FALLBACK_ENABLED=false

# ============================================================================
# Network and CORS Settings
# ============================================================================

# Cross-platform API Configuration
ALLOWED_ORIGINS=http://127.0.0.1:7788

# ============================================================================
# Display and Platform-specific Settings
# ============================================================================

# Display settings
# Format: WIDTHxHEIGHTxDEPTH
RESOLUTION=1920x1080x24
# Width in pixels
RESOLUTION_WIDTH=1920
# Height in pixels
RESOLUTION_HEIGHT=1080

# VNC settings
VNC_PASSWORD=youvncpassword

# Windows Font Directory (Windows only)
WIN_FONT_DIR=C:\Windows\Fonts

# ============================================================================
# Platform-specific Browser Path Examples (uncomment and modify as needed)
# ============================================================================

# macOS Chrome Default Path
# CHROME_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome

# Windows Chrome Default Paths
# CHROME_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe
# CHROME_PATH=C:\Program Files (x86)\Google\Chrome\Application\chrome.exe

# Windows Edge Default Path
# EDGE_PATH=C:\Program Files (x86)\Microsoft\Edge\Application\msedge.exe

# Linux Chrome/Chromium Paths
# CHROME_PATH=/usr/bin/google-chrome
# CHROME_PATH=/usr/bin/chromium-browser
